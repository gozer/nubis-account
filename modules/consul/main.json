{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Cloudformation template for nubis-jumphost deployment",
  "Parameters": {
    "Environment": {
      "Description": "Environment we are deploying into",
      "Default": "sandbox",
      "Type": "String",
      "AllowedValues": [
        "admin",
        "prod",
        "stage",
        "sandbox"
      ],
      "ConstraintDescription": "Must specify prod, stage, or sandbox."
    },
    "StacksVersion": {
      "Description": "Version of the Nubis Stacks",
      "Type": "String",
      "Default": "v1.0.1"
    },
    "ServiceName": {
      "Description": "Service Name (unused, for dependency only)",
      "Type": "String"
    }
  },
  "Resources": {
    "VpcInfo": {
      "Type": "Custom::VpcInfo",
      "Properties": {
        "StacksVersion": {
          "Ref": "StacksVersion"
        },
        "ServiceToken": {
          "Fn::Join": [
            "",
            [
              "arn:aws:lambda:",
              {
                "Ref": "AWS::Region"
              },
              ":",
              {
                "Ref": "AWS::AccountId"
              },
              ":function:",
              "LookupNestedStackOutputs"
            ]
          ]
        },
        "StackName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "AWS::Region"
              },
              "vpc"
            ]
          ]
        },
        "SearchString": {
          "Ref": "Environment"
        }
      }
    },
    "MetaInfo": {
      "Type": "Custom::MetaInfo",
      "Properties": {
        "StacksVersion": {
          "Ref": "StacksVersion"
        },
        "ServiceToken": {
          "Fn::Join": [
            "",
            [
              "arn:aws:lambda:",
              {
                "Ref": "AWS::Region"
              },
              ":",
              {
                "Ref": "AWS::AccountId"
              },
              ":function:",
              "LookupNestedStackOutputs"
            ]
          ]
        },
        "StackName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "AWS::Region"
              },
              "vpc"
            ]
          ]
        },
        "SearchString": "VPCMeta"
      }
    }
  },
  "Outputs": {
    "VpcId": {
      "Description": "VpcId",
      "Value": {
        "Fn::GetAtt": [
          "VpcInfo",
          "VpcId"
        ]
      }
    },
    "InternetAccessSecurityGroupId": {
      "Description": "InternetAccessSecurityGroupId",
      "Value": {
        "Fn::GetAtt": [
          "VpcInfo",
          "InternetAccessSecurityGroupId"
        ]
      }
    },
    "SharedServicesSecurityGroupId": {
      "Description": "SharedServicesSecurityGroupId",
      "Value": {
        "Fn::GetAtt": [
          "VpcInfo",
          "SharedServicesSecurityGroupId"
        ]
      }
    },
    "PrivateSubnets": {
      "Description": "Private Subnets",
      "Value": {
        "Fn::Join": [
          ",",
          [
            {
              "Fn::GetAtt": [
                "VpcInfo",
                "PrivateSubnetAZ1"
              ]
            },
            {
              "Fn::GetAtt": [
                "VpcInfo",
                "PrivateSubnetAZ2"
              ]
            },
            {
              "Fn::GetAtt": [
                "VpcInfo",
                "PrivateSubnetAZ3"
              ]
            }
          ]
        ]
      }
    },
    "PublicSubnets": {
      "Description": "Public Subnets",
      "Value": {
        "Fn::Join": [
          ",",
          [
            {
              "Fn::GetAtt": [
                "VpcInfo",
                "PublicSubnetAZ1"
              ]
            },
            {
              "Fn::GetAtt": [
                "VpcInfo",
                "PublicSubnetAZ2"
              ]
            },
            {
              "Fn::GetAtt": [
                "VpcInfo",
                "PublicSubnetAZ3"
              ]
            }
          ]
        ]
      }
    },
    "CredstashKeyId": {
      "Description": "CredstashKeyId",
      "Value": {
        "Fn::GetAtt": [
          "MetaInfo",
          "CredstashKeyId"
        ]
      }
    },
    "HostedZoneId": {
      "Description": "HostedZoneId",
      "Value": {
        "Fn::GetAtt": [
          "MetaInfo",
          "HostedZoneId"
        ]
      }
    }
  }
}
